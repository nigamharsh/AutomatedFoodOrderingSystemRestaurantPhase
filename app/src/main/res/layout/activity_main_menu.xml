<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:context=".MainMenu">


    <ImageView
        android:id="@+id/background"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/defaultColor"
        android:src="@drawable/background"
        tools:ignore="MissingConstraints" />

    <RelativeLayout
        android:id="@+id/linearlayout"
        android:layout_width="275dp"
        android:layout_height="390dp"
        android:background="@drawable/background_shape"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.497">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="258dp"
            android:layout_height="65dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/img16" />



        <Button
            android:id="@+id/signwithEmail"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/change"
            android:textStyle="italic"
            android:drawableLeft="@drawable/ic_baseline_email"
            android:padding="20dp"
            android:paddingLeft="50dp"
            android:text="SignIn with Email"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/signwithPhone"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/signwithEmail"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/change2"
            android:drawableLeft="@drawable/ic_baseline_local_phone"
            android:padding="10dp"
            android:textStyle="italic"
            android:paddingLeft="50dp"
            android:text="SignIn with Phone"
            android:textColor="#FFFFFF" />





        <ImageView
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="105dp"
            android:src="@drawable/or"
            android:id="@+id/OR"
            android:layout_below="@+id/signwithPhone"/>

        <Button
            android:id="@+id/signUp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/OR"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/chnage3"
            android:padding="10dp"
            android:paddingLeft="10dp"
            android:text="SignUp"
            android:textColor="#FFFFFF"
            android:textStyle="italic" />



    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>